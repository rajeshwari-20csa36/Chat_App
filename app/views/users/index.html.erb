<div class="container">
  <h1 class="mt-4">User List</h1>

  <%= render 'users/search' %>

  <ul class="list-group mt-3">
    <% @users.each do |user| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= user.email %>
        <span>
          <%= link_to(image_tag('chat (1).png', alt: 'Chat', class: 'chat-icon-small'), user_path(user)) %>
        </span>
      </li>
    <% end %>
  </ul> 
</div>
